pipeline {
  agent any

  
  
  stages {
    stage('CheckOut') {
      steps {
        echo 'Checkout the source code from GitHub'
        git branch: 'main', url: 'https://github.com/Thotayaswanth/InsureMe-20Mar.git'
            }
    }
    
    stage('Package the Application') {
      steps {
        echo " Packaing the Application"
        sh 'mvn clean package'
            }
    }
    
    
    
    stage('Docker Image Creation') {
      steps {
        sh 'docker build -t thotayaswanth/insureme:1.0 .'
            }
    }
    stage('Docker-Login') {
           steps {
               withCredentials([usernamePassword(credentialsId: 'dockercreds', passwordVariable: 'dockerpassword', usernameVariable: 'dockerlogin')]) {
               sh 'docker login -u ${dockerlogin} -p ${dockerpassword}'
       }
                        }
                }

    stage('Push Image to DockerHub') {
      steps {
        sh 'docker push thotayaswanth/insureme:1.0'
            }
    }
    stage('Deploy Application using Ansible') {
      steps {
        ansiblePlaybook become: true, credentialsId: 'sshid', disableHostKeyChecking: true, installation: 'ansible', inventory: '/etc/ansible/hosts', playbook: 'deploy.yml', vaultTmpPath: ''
            }
    }

  }
}

